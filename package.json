{
    "name": "karta",
    "version": "1.0.0",
    "description": "Use it to re-build Tailwind CSS when there are changes in the layout",
    "scripts": {
      "dev": "./themes/congo/node_modules/tailwindcss/lib/cli.js -c ./themes/congo/tailwind.config.js -i ./themes/congo/assets/css/main.css -o ./assets/css/compiled/main.css --jit -w",
      "build": "node ./themes/congo/node_modules/tailwindcss/lib/cli.js -c ./themes/congo/tailwind.config.js -i ./themes/congo/assets/css/main.css -o ./assets/css/compiled/main.css --jit"
    }
  }